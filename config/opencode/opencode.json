{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "leader": "\\",
	"session_interrupt": "ctrl+c",
    "app_exit": "ctrl+d"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "ev2": {
      "type": "local",
      "command": [
        "pwsh",
        "-NoProfile",
        "-Command",
        "Push-Location 'P:\\Work\\Networking\\Repo\\ev2-mcp\\src\\mcp\\ev2\\ev2mcp'; dotnet run; Pop-Location"
      ]
    },
    "azure": {
      "type": "local",
      "command": [
        "pwsh",
        "-NoProfile",
        "-Command",
        "Push-Location $env:TEMP; dnx Azure.Mcp --yes -- azmcp server start; Pop-Location"
      ]
    },
    "azdo": {
      "type": "local",
      "command": [
        "pwsh",
        "-NoProfile",
        "-Command",
        "Push-Location $env:TEMP; npx -y @azure-devops/mcp msazure; Pop-Location"
      ]
    },
    "dtfx": {
      "type": "local",
      "command": [
        "pwsh",
        "-NoProfile",
        "-Command",
        "Push-Location 'P:\\Playground\\DurableTasksMcp'; dotnet run -- -s ztsdevlndt; Pop-Location"
      ]
    }
  }
}
